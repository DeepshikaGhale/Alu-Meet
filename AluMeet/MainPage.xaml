<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AluMeet.MainPage">

    
            <Grid
                RowDefinitions="100, 100, 100"
                ColumnDefinitions="100, 100"
                ColumnSpacing="30"
                RowSpacing="30"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                >

                <Button Grid.Row="0" Grid.Column="0" Text="Login" Clicked="loginNavBtnItemTapped"/>
                <Button Grid.Row="0" Grid.Column="1" Text="Register" Clicked="RegisterNavBtnItemTapped"/>

                <Button Grid.Row="1" Grid.Column="0" Text="Jobs" Clicked="JobNavBtnItemTapped" />
                <Button Grid.Row="1" Grid.Column="1" Text="Events" Clicked="PostEventsNavBtnItemTapped"/>

                <Button Grid.Row="2" Grid.Column="1" Text="Directory" Clicked="DirectoryNavBtnItemTapped"/>
            </Grid>
        

</ContentPage>

